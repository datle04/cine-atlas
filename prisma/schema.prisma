generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============================
// 1. BETTER-AUTH MODELS (Bắt buộc)
// ==============================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]
  
  // Quan hệ ngược: Một User có nhiều phim trong Watchlist
  watchlist     WatchlistItem[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// ==============================
// 2. APP SPECIFIC MODELS
// ==============================

model WatchlistItem {
  id          String   @id @default(cuid())
  userId      String
  
  // Thông tin phim từ TMDB (Lưu lại để hiển thị nhanh không cần fetch TMDB)
  movieId     Int      // ID phim bên TMDB
  mediaType   String   @default("movie") // "movie" hoặc "tv"
  title       String
  posterPath  String?
  voteAverage Float?
  releaseDate String?

  addedAt     DateTime @default(now())

  // Thiết lập quan hệ với bảng User
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Constraint: Một user không thể add cùng 1 phim 2 lần
  @@unique([userId, movieId])
  @@map("watchlist_item")
}
